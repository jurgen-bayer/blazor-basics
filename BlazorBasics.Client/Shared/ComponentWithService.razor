@using BlazorBasics.Client.Services

<!-- Inject the counter service -->
@inject ICounterService counterService

<h3>Component with Service</h3>
<div class="mt-2 running-text">Note that the service is also used in the <code>MainLayout</code> that displays the 
    current count in the top row.</div>

<div class="mt-2">
    <button class="btn btn-primary" @onclick="IncreaseCount">Increase Count</button>
</div>

<div class="mt-2">
    <button class="btn btn-primary" @onclick="DecreaseCount">Decrease Count</button>
</div>